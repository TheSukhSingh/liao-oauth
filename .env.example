ENV=dev
LOG_DIR=logs

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_BASE=http://localhost:8000   # where /auth/google/callback lives

# Comma-separated hostnames allowed for redirect_uri param
ALLOWED_REDIRECT_HOSTS=["localhost","127.0.0.1"]

# 32-byte urlsafe base64 key (for token encryption)
ENCRYPTION_KEY=PUT_A_BASE64_KEY_HERE

# Internal token vending auth key (for /auth/google/token in M2)
API_INTERNAL_KEY=PUT_A_RANDOM_LONG_SECRET_HERE

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

INTERNAL_ALLOWED_IPS=["127.0.0.1","172.16.0.0/12"]

RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_PER_KEY=120
RATE_LIMIT_MAX_PER_USER=60
